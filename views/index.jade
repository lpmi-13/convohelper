doctype
html
  head
    title Convohelper
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript") 
    script(src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript")   
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" type="text/javascript")   
    script(src="javascripts/indexEvents.js" type="text/javascript")

    link(rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
    style(type="text/css")
    link(rel="stylesheet" href="/stylesheets/custom.css") 

  body
    div(class="container")  
      div(class="row")
        div(class="col-xs-12 convo")     
          h1 Convohelper
          h3 enter a Group PIN to join or generate a new one
      div(class="row")
        div(class="col-xs-12")
          div(class="input-group input-group-lg entry")
            input(type="text" placeholder="enter group PIN" class="form-control enter-pin")
      div(class="row")
        div(class="col-xs-12")
          div(class="buttons")
            input(type="submit" value="join group room" class="btn btn-primary btn-join")
      div(class="row")
        div(class="col-xs-3")
        div(class="col-xs-6")
          div(class="row")
            div(class="col-xs-6")
              div(class="buttons")
                input(type="submit" value="generate new PIN" class="btn btn-primary btn-create")
            div(class="col-xs-6")
              div(class="buttons group-number")
                select(class="form-control")
                  option(value="3") for 3 groups
                  option(value="4") for 4 groups
                  option(value="5") for 5 groups
                  option(value="6") for 6 groups
        div(class="col-xs-3")
      div(class="row")
        div(class="col-xs-12 group_pin")
      footer
        p powered by <a href="https://pusher.com/">Pusher</a>