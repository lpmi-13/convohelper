doctype
html
  head
    title Convohelper
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript") 
    script(src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript")   
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js" type="text/javascript")
    script(src="javascripts/indexEvents.js" type="text/javascript")

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css")
    link(rel="stylesheet" href="/stylesheets/custom.css") 

  body
    div(class="container")  
      div(class="row")
        div(class="col-xs-12 convo")     
          h1 Convohelper
          h3 
            | enter a Group PIN to join
            br
            | or generate a new one
      div(class="row")
        div(class="col-xs-12")
          div(class="input-group input-group-lg entry")
            input(type="text" placeholder="enter group PIN" id="pin-input" class="form-control-lg enter-pin")
      div(class="row")
        div(class="col-xs-12")
          div(class="buttons")
            input(type="submit" value="join group room" class="btn btn-primary btn-join")
      div(class="row")
        div(class="col-xs-2")
        div(class="col-xs-8")
          div(class="row")
            div(class="col-xs-6")
              div(class="bottom-buttons")
                input(type="submit" value="new PIN" class="btn btn-primary btn-create")
            div(class="col-xs-6")
              div(class="bottom-buttons")
                select(class="form-control group-number")
                  option(value="3") for 3 groups
                  option(value="4") for 4 groups
                  option(value="5") for 5 groups
                  option(value="6") for 6 groups
        div(class="col-xs-2")
      div(class="row")
        div(class="col-xs-2")
        div(class="col-xs-8 group_pin")
        div(class="col-xs-2")
      footer
        p powered by <a href="https://pusher.com/">Pusher</a>